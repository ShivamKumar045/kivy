<CamApp>:
    id:CameraScreen
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: "Welcome"
            pos_hint: {'top':1.0}
            md_bg_color: app.theme_cls.accent_color
            right_action_items: [["dots-horizontal", lambda x: app.callback()]]
            
  
        MDSeparator:
        BoxLayout:
            id: main_box_layout
            padding: 5
            spacing: 5
            orientation:'vertical'
            MDSeparator:
            MDSeparator:
            BoxLayout:
                MDCard:
                    orientation: 'vertical'
                    BoxLayout:
                        MDRectangleFlatButton:
                            text: "Open Camera"
                            on_press:
                                root.manager.transition.direction='left'
                                root.manager.current='CameraScreen'
                        
